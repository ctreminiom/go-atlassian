# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# every file
[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# config files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
